<header class="flex justify-between items-center border py-2 px-3 h-12 sticky top-0 bg-white">
    <a href="/" class="text-xl font-black font-mynerve">CoffeeConnect</a>
    <div class="flex gap-5 items-center">
        {{#if user}}
            <a href="/p/{{user.username}}">Profile</a>
            {{#ifEq this user.role.role_name "Penjual"}}
                {{#if user.Kedai_Profile}}
                    <a href="/k/{{user.Kedai_Profile.name}}">Profile kedai</a>
                {{else}}
                    <a href="/editKedai">Profile kedai</a>
                {{/if}}
            {{/ifEq}}
            <a href="/logout" class="btn btn-danger">Logout</a>
        {{else}}
            <a href="/login">Login</a>
            <a href="/register">Register</a>
        {{/if}}
    </div>
</header>
<main class="h-fit">
    {{{body}}}
</main>