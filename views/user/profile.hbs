<div class="p-2 min-h-[calc(100vh-3rem)] flex items-center justify-center flex-grow">
    <div class="bg-white p-4 rounded-xl w-1/2">
        <div class="flex items-end gap-3 mb-2">
            <h1>{{profile.full_name}}</h1>
            {{#ifEq this profile.username user.username}}
                {{#unless editMode}}
                    <a href="/editprofile" class="link">Edit Profile</a>
                {{/unless}}
            {{/ifEq}}
        </div>
        <div class="flex flex-col gap-2 ps-5">
            <p>@{{profile.username}}</p>
            <p class="text-slate-600">{{profile.profile.address}}</p>
            {{#if profile.profile.phone}}
                <a href="http://wa.me/{{profile.profile.phone}}" class="link self-start border">Contact
                    me: {{profile.profile.phone}}</a>
            {{/if}}
        </div>
        <hr class="mt-2"/>
    </div>
</div>