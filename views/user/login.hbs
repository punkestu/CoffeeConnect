<div class="flex flex-col items-center justify-center h-screen bg-primary text-white">
    <h1 class="text-center my-3">Login</h1>
    <form action="/login" method="POST" class="flex flex-col items-center gap-2 my-2 w-1/2 lg:w-1/3">
        <div class="w-full">
            <label for="username" class="font-bold">Username</label>
            <input
                type="text"
                name="username"
                id="username"
                class="input-type w-full"
                placeholder="Username"
                value="{{payload.username}}"/>
            <p class="error-msg">{{errors.username.msg}}</p>
        </div>
        <div class="w-full">
            <label for="password" class="font-bold">Password</label>
            <input
                type="password"
                name="password"
                id="password"
                class="input-type w-full"
                placeholder="Password"/>
            <p class="error-msg">{{errors.password.msg}}</p>
        </div>
        <button type="submit" class="btn btn-primary w-full">Masuk</button>
        <span>atau</span>
        <a href="/register" class="link">Belum punya akun?</a>
    </form>
</div>