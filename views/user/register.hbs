<div class="flex flex-col items-center">
    <h1 class="text-center my-3">Registrasi {{role}}</h1>
    <form action="{{endpoint}}" method="POST" class="flex flex-col items-center gap-2 my-2 w-1/2 lg:w-1/3">
        <div class="w-full">
            <label for="fullname" class="font-bold">Nama Lengkap</label>
            <input
                    type="text"
                    name="fullname"
                    id="fullname"
                    class="input-type w-full"
                    placeholder="Fullname"
                    value="{{payload.fullname}}"/>
            <p class="error-msg">{{errors.fullname.msg}}</p>
        </div>
        <div class="w-full">
            <label for="email" class="font-bold">Email</label>
            <input
                    type="email"
                    name="email"
                    id="email"
                    class="input-type w-full"
                    placeholder="Email"
                    value="{{payload.email}}"
            />
            <p class="error-msg">{{errors.email.msg}}</p>
        </div>
        <div class="w-full">
            <label for="username" class="font-bold">Username</label>
            <input
                    type="text"
                    name="username"
                    id="username"
                    class="input-type w-full"
                    placeholder="Username"
                    value="{{payload.username}}"
            />
            <p class="error-msg">{{errors.username.msg}}</p>
        </div>
        <div class="w-full">
            <label for="password" class="font-bold">Password</label>
            <input
                    type="password"
                    name="password"
                    id="password"
                    class="input-type w-full"
                    placeholder="Password"
            />
            <p class="error-msg">{{errors.password.msg}}</p>
        </div>
        <button type="submit" class="btn btn-primary w-full">Daftar</button>
        atau

        {{#ifEq endpoint "/registerpenjual"}}
            <a href="/register" class="link">Daftar sebagai pembeli</a>
        {{else}}
            <a href="/registerpenjual" class="link">Daftar sebagai penjual</a>
        {{/ifEq}}

        <a href="/login" class="link">Sudah punya akun?</a>
    </form>
</div>