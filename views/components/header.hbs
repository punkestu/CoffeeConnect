<header class="flex justify-between items-center bg-slate-300 py-2 px-3 h-12 sticky top-0" style="z-index: 9999">
    <a href="/" class="text-xl font-black flex items-center"><img src="/images/logo.svg" class="h-5" alt="/images/logo.svg">CoffeeConnect</a>
    <div class="flex gap-5 items-center font-bold">
        {{#if user}}
            <a href="/p/{{user.username}}">Profile</a>
            <a href="/logout" class="text-red-700">Logout</a>
        {{else}}
            <a href="/login">Login</a>
            <a href="/register">Register</a>
        {{/if}}
    </div>
</header>
<main class="bg-primary flex min-h-[calc(100vh-3rem)] items-start">
    {{{body}}}
    {{#unless noSidebar}}
        {{> sidebar}}
    {{/unless}}
</main>