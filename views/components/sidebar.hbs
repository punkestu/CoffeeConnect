                        <a href="/prediksi" class="bg-green-400/70 py-1 px-2 rounded-lg">+ Prediksi</a>
                        <a href="/export" class="bg-green-400/70 py-1 px-2 rounded-lg">+ Import</a>
                        <p class="bg-white/50 py-1 px-2 rounded-lg">Production Data</p>
                        <a href="/bahan/tambah" class="bg-green-400/70 py-1 px-2 rounded-lg">+ Add Production Data</a>
                        <a href="/produk/tambah" class="bg-green-400/70 py-1 px-2 rounded-lg">+ Add Menu</a>
                    </div>
                {{/if}}
            {{/ifEq}}
        {{/if}}
    </section>
{{/if}}
