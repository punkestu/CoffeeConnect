        <div class="flex flex-col p-4 bg-white rounded-xl font-bold">
            <a href="/">Home</a>
            {{#ifEq this user.role.role_name "Penjual"}}
                {{#if user.Kedai_Profile}}
                    <a href="/k/{{user.Kedai_Profile.name}}">Store Profile</a>
                    <a href="/produks">Products</a>
                    <a href="/bahan">Product Ingredients</a>
                {{else}}
                    <a href="/editKedai">Store Profile</a>
                {{/if}}
            {{/ifEq}}
        </div>
        {{#if useAction}}
            {{#ifEq this user.role.role_name "Penjual"}}
                {{#if user.Kedai_Profile}}
                    <div class="flex flex-col mt-2 gap-2">
